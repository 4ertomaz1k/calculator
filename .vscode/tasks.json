{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML Calculator",
            "type": "shell",
            //path to compiler
            "command": "C:\\mingw64\\bin\\g++.exe", 
            "args": [
                "CalculatorModel.cpp",
                "-o",
                "Calculator.exe",
                // path to include
                "-I",
                "C:\\SFML-3.0.2\\include",
                // path to lib
                "-L",
                "C:\\SFML-3.0.2\\lib",
                // SFML Librarys
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                // Standart C++
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        }
    ]
}