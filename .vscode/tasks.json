{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Calculator",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "CalculatorView.cpp",
                "Button.cpp",
                "CalculatorModel.cpp",
                "-o",
                "Calculator.exe",
                "-I",
                "C:/SFML-3.0.2/include",
                "-L",
                "C:/SFML-3.0.2/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Компиляция калькулятора с SFML"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe сборка активного файла",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ]
}